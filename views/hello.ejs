<!-- views/hello.ejs -->
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Hello World!</title>
    <link rel="stylesheet" href="/css/master.css">
</head>

<body>
    <h1>Hello
        <!-- name의 값이 있을 경우 -->
        <% if(name){ %>
            <!-- span의 클래스를 name으로 지정 -->
            <span class="name">
                <!-- name의 값 출력 -->
                <%= name %>!
            </span>
            <!-- name의 값이 없을 경우 -->
            <% } else { %>
                <!-- span의 클래스를 stranger로 지정 후 Stranger! 출력-->
                <span class="stranger">Stranger!</span>
                <% } %>
    </h1>
</body>

</html>